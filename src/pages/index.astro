---
// src/pages/index.astro
import Concepto from "../components/Concepto.astro";
import Inversion from "../components/Inversion.astro";
import Impacto from "../components/Impacto.astro";
import VisionMision from "../components/VisionMision.astro";
import Beneficios from "../components/Beneficios.astro";
import Contacto from "../components/Contacto.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import imgLogo from "../assets/tph-logo-blanco.png";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Tu Primer Hogar - Alquiler con opción a compra</title>
  </head>
  <body>
    <!-- SECCIÓN HERO (PORTADA) -->
    
    <section
      class="relative h-screen min-h-[600px] flex items-center justify-center bg-cover bg-center"
      style="background-image: url('/img/hero-image.jpg');"
    >
      <!-- 1. CAPA OSCURA (OVERLAY) -->
      <div class="absolute inset-0 bg-black/50"></div>

      <!-- 2. CABECERA INTEGRADA (LOGO) -->
      <!-- 
           absolute top-0: Lo pegamos al techo.
           z-20: Por encima de la capa oscura.
           w-full: Ocupa todo el ancho.
        -->
      <header
        class="absolute top-0 left-0 w-full z-20 py-8 sm:py-12 transition-all duration-500"
      >
        <div class="max-w-7xl mx-auto px-4 flex justify-center">
          <!-- LOGO BLANCO CON TRANSPARENCIA SUTIL -->
          <!-- opacity-90: Le da ese toque elegante de no ser "blanco nuclear" -->
          <a href="/" class="hover:opacity-100 transition-opacity opacity-90">
            <Image
              src={imgLogo}
              alt="Logotipo Tu Primer Hogar"
              width={300}
              loading="eager"
              class="h-auto w-48 md:w-64 drop-shadow-lg"
            />
          </a>
        </div>
      </header>

      <!-- 3. CONTENIDO CENTRAL -->
      <div
        class="relative z-10 text-center text-white px-4 max-w-5xl mx-auto mt-16"
      >
        <h1
          class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight uppercase tracking-tight drop-shadow-md"
        >
          Tu hogar sin <br />
          <span class="text-blue-400">pagar entrada</span>
        </h1>

        <p
          class="text-lg md:text-2xl mb-12 text-gray-100 max-w-2xl mx-auto drop-shadow font-light"
        >
          La plataforma que convierte tu alquiler mensual en la compra de tu
          futura vivienda. Sin letra pequeña.
        </p>

        <!-- BOTONES DE ACCIÓN -->
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center w-full"
        >
          <!-- BOTÓN 1: CONTACTO / SOLICITAR INFO (Ancla al formulario del final) -->
          <a
            href="/contacto"
            class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-10 rounded-full text-lg transition-all transform hover:-translate-y-1 hover:shadow-lg hover:shadow-blue-500/50"
          >
            Solicita más información
          </a>

          <!-- BOTÓN 2: SABER MÁS (Ancla a la sección de beneficios) -->
          <a
            href="#modelo"
            class="w-full sm:w-auto bg-transparent hover:bg-white/10 text-white font-bold py-4 px-10 rounded-full text-lg transition-all border-2 border-white backdrop-blur-sm"
          >
            ¿Cómo funciona?
          </a>
        </div>
      </div>

      <!-- ELEMENTO DECORATIVO: FLECHA SCROLL (Opcional, queda muy bien) -->
      <div
        class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce text-white/70"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg
        >
      </div>
    </section>
    <!-- AQUI VAN LAS DISTINTAS SECCIONES -->
    <Concepto />

    <Inversion />

    <Impacto />

    <VisionMision />

    <Beneficios />

    <Contacto />

    <Footer />
  </body>
</html>
