---
import BaseHead from '../../components/BaseHead.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
---

<html lang="es">
  <head>
    <BaseHead title="Mi Panel | Inversores" description="Panel de control privado" />
  </head>
  
  <!-- 
    CORRECCI√ìN AQU√ç:
    A√±adimos 'pt-24' (unos 96px) al body.
    Esto crea el espacio necesario para que el Navbar fijo no tape el saludo.
  -->
  <body class="bg-gray-50 pt-24 font-sans text-gray-800">
    
    <!-- Navbar (Al no poner isTransparent, sale blanca por defecto, perfecto para el dashboard) -->
    <Navbar />

    <main class="max-w-7xl mx-auto px-4 py-12">
        
        <!-- SALUDO Y BOT√ìN CERRAR -->
        <!-- 
           md:flex-row: En PC se ponen en l√≠nea (uno a cada lado).
           items-center: Se alinean verticalmente al centro.
        -->
        <div class="flex flex-col md:flex-row justify-between items-center mb-10 border-b border-gray-200 pb-6 gap-4 md:gap-0">
            
            <!-- Izquierda: Saludo -->
            <div class="text-center md:text-left">
                <h1 class="text-3xl font-bold text-gray-900">Hola, Inversor Demo üëã</h1>
                <p class="text-gray-500 mt-1">Bienvenido a tu panel de control.</p>
            </div>

            <!-- Derecha: Cerrar sesi√≥n -->
            <div>
                <a href="/inversores" class="group flex items-center px-4 py-2 bg-white border border-gray-200 rounded-lg text-red-600 text-sm font-bold hover:bg-red-50 hover:border-red-200 transition-all shadow-sm">
                    <svg class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                    Cerrar Sesi√≥n
                </a>
            </div>
        </div>

        <!-- RESUMEN DE ESTADO (KPIs) -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <!-- Tarjeta 1 -->
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                <div class="text-gray-500 text-sm font-medium mb-1">Inversi√≥n Total</div>
                <div class="text-3xl font-bold text-blue-900">150.000 ‚Ç¨</div>
                <div class="text-green-600 text-xs font-bold mt-2 flex items-center">
                    <span class="w-2 h-2 bg-green-500 rounded-full mr-1"></span> Activa
                </div>
            </div>
            <!-- Tarjeta 2 -->
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                <div class="text-gray-500 text-sm font-medium mb-1">Proyecto Asignado</div>
                <div class="text-xl font-bold text-gray-900 leading-tight">Residencial M√°laga Este</div>
                <a href="/proyectos" class="text-blue-600 text-xs font-bold mt-3 inline-block hover:underline">Ver ficha t√©cnica ‚Üí</a>
            </div>
            <!-- Tarjeta 3 -->
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                <div class="text-gray-500 text-sm font-medium mb-1">Rentabilidad Estimada</div>
                <div class="text-3xl font-bold text-green-600">6.5%</div>
                <div class="text-gray-400 text-xs mt-2">TAE Anual</div>
            </div>
        </div>

        <!-- SECCI√ìN DE DOCUMENTOS -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                <h2 class="text-lg font-bold text-gray-800">Documentaci√≥n</h2>
                <span class="text-xs font-medium text-gray-500 bg-white px-2 py-1 rounded border border-gray-200">3 Archivos</span>
            </div>
            
            <div class="divide-y divide-gray-100">
                
                <!-- Documento 1 -->
                <div class="p-6 flex flex-col sm:flex-row items-start sm:items-center justify-between hover:bg-blue-50 transition-colors cursor-pointer group gap-4">
                    <div class="flex items-center">
                        <div class="bg-red-100 text-red-600 p-3 rounded-xl mr-4 group-hover:bg-red-600 group-hover:text-white transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900">Dossier Ejecutivo v2.4</h3>
                            <p class="text-sm text-gray-500">Actualizado: 12 Ene 2025</p>
                        </div>
                    </div>
                    <button class="text-blue-600 font-bold text-sm hover:underline whitespace-nowrap">Descargar PDF</button>
                </div>

                <!-- Documento 2 -->
                <div class="p-6 flex flex-col sm:flex-row items-start sm:items-center justify-between hover:bg-blue-50 transition-colors cursor-pointer group gap-4">
                    <div class="flex items-center">
                        <div class="bg-blue-100 text-blue-600 p-3 rounded-xl mr-4 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900">Planos de Obra y Licencias</h3>
                            <p class="text-sm text-gray-500">Im√°genes - 14.5 MB</p>
                        </div>
                    </div>
                    <button class="text-blue-600 font-bold text-sm hover:underline whitespace-nowrap">Descargar ZIP</button>
                </div>

                <!-- Documento 3 -->
                <div class="p-6 flex flex-col sm:flex-row items-start sm:items-center justify-between hover:bg-blue-50 transition-colors cursor-pointer group gap-4">
                    <div class="flex items-center">
                        <div class="bg-green-100 text-green-600 p-3 rounded-xl mr-4 group-hover:bg-green-600 group-hover:text-white transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 00-2 2v14a2 2 0 002 2h10a2 2 0 002-2V9a2 2 0 00-2-2h-1"></path></svg>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900">Reporte Mensual - Diciembre</h3>
                            <p class="text-sm text-gray-500">Estado de cuentas</p>
                        </div>
                    </div>
                    <button class="text-blue-600 font-bold text-sm hover:underline whitespace-nowrap">Descargar XLS</button>
                </div>

            </div>
        </div>

    </main>

    <Footer />

  </body>
</html>